
{
  "name": "printeasy-test-suite",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for PrintEasy platform",
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:e2e": "playwright test",
    "test:api": "jest api/",
    "test:db": "jest database/",
    "test:frontend": "jest frontend/",
    "test:all": "npm run test:api && npm run test:db && npm run test:e2e",
    "test:performance": "jest --testPathPattern=performance",
    "test:security": "jest --testPathPattern=security",
    "test:load": "jest --testPathPattern=load --runInBand",
    "setup": "npm install && npx playwright install",
    "report": "npm run test:coverage && npm run test:e2e && npm run generate-report",
    "generate-report": "node scripts/generate-test-report.js"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "bcrypt": "^5.1.1",
    "sequelize": "^6.35.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "jest-html-reporter": "^3.10.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "../backend/**/*.js",
      "../src/**/*.{ts,tsx}",
      "!../backend/node_modules/**",
      "!../src/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/setup.js"],
    "testTimeout": 30000
  },
  "playwright": {
    "testDir": "./frontend",
    "timeout": 30000,
    "fullyParallel": true,
    "forbidOnly": !!process.env.CI,
    "retries": process.env.CI ? 2 : 0,
    "workers": process.env.CI ? 1 : undefined,
    "reporter": "html",
    "use": {
      "baseURL": "http://localhost:3000",
      "trace": "on-first-retry"
    }
  }
}
